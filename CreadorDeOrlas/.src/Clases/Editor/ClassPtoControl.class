' Gambas class file

Inherits Panel

Property coeficiente As Float 
Private hcoeficiente As Float 

Private colores As Integer
Private observador As New Observer(Me) As "Observador1" 'observador que observa este panel...

Public Sub _new(x As Integer, y As Integer, colores As Integer)
  
  hcoeficiente = 1
  Me.x = x - 5 '- 5
  Me.y = y - 5 '- 5
  Me.w = 10
  Me.h = 10
  Me.Background = colores
  
End

Public Sub Observador1_MouseMove()
  
  Me.x += Mouse.X - 5
  Me.y += Mouse.y - 5
  
End

Private Function coeficiente_read() As Float 
  
  Return hcoeficiente 
  
End  

Private Sub coeficiente_write(Valor As Float)
  
  hcoeficiente = Valor 
  Me.x = hcoeficiente * (Me.x - 5) '- 5
  Me.y = hcoeficiente * (Me.y - 5) '- 5
  Me.w = 10
  Me.h = 10
  
End
