'subrutinas
Public Sub vacio()
  
  hfoto = ""
  hNombre = ""
  hApellidos = ""
  hposicion.vacio()
  hcolocado = False
  hid = 0
  htag = ""
  horden = 0
  
End

Public Sub Text() As String
  
  Dim cadena As String
  
  cadena = Me.Foto & "\n"
  cadena &= Me.Nombre & "\n"
  cadena &= Me.Apellidos & "\n"
  cadena &= Me.posicion.Text()
  cadena &= Me.colocado & "\n"
  cadena &= Me.id & "\n"
  cadena &= Me.Tag & "\n"
  cadena &= Me.Orden & "\n"
  Return cadena
  
End

